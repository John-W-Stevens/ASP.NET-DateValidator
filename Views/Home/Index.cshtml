@{
    ViewData["Title"] = "Home Page";
}
@model Trip

<div class="text-center">
    <h1 class="display-4">Enter a Departure Date for your trip:</h1>
</div>

<div class="row">
    <div class="col-10 offset-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <form action="/" method="POST">
            <div class="form-group">
                <label asp-for="DepartureDate"></label>&nbsp&nbsp<span class="error" asp-validation-for="DepartureDate"></span>

                <input asp-for="DepartureDate" class="form-control" />
            </div>
            <div class="form-group text-right">
                <button class="btn btn-primary">Add departure date</button>
            </div>
        </form>
    </div>
</div>

